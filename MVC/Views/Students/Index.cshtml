<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

@model IEnumerable<StudentModel>

@{
    string title = "Student List";
    ViewData["Title"] = title;
    int count = Model.Count();
    string countOutput = count == 0 ? "No records found." : count == 1 ? "1 record found." : $"{count} records found.";
}

<h1>@title</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

@if (TempData["Message"] is not null)
{
    <p class="alert alert-success">@TempData["Message"]</p>
}

<p class="alert alert-info">
    @countOutput
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th><i class="fas fa-user"></i> Student Name</th>
            <th><i class="fas fa-check"></i> Is Active</th>
            <th><i class="fas fa-graduation-cap"></i> Grade Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                <td>@Html.DisplayFor(modelItem => item.IsActiveOutput)</td>
                <td>@Html.DisplayFor(modelItem => item.GradeNameOutput)</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
