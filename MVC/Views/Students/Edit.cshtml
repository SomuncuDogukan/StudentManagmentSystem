@model StudentModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" class="needs-validation" novalidate>
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row mb-3">
                <label asp-for="StudentName" class="col-sm-2 col-form-label">Student Name</label>
                <div class="col-sm-10">
                    <input asp-for="StudentName" class="form-control" required />
                    <span asp-validation-for="StudentName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="Password" class="col-sm-2 col-form-label">Password</label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" required />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="IsActive" class="col-sm-2 col-form-label">Is Active</label>
                <div class="col-sm-10" style="padding-top: 7px;">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label" asp-for="IsActive">Active</label>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <label asp-for="GradeId" class="col-sm-2 col-form-label">Grade</label>
                <div class="col-sm-10">
                    <select asp-for="GradeId" class="form-select" asp-items="ViewBag.GradeId" required>
                        <option value="">-- Select --</option>
                    </select>
                    <span asp-validation-for="GradeId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                    <a asp-action="Index" class="btn btn-link text-decoration-none">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
