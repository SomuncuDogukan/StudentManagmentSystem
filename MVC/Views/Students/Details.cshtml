@model StudentModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Details";
}

<!-- Ensure you have included necessary CSS and JS files for Bootstrap and Font Awesome -->
<style>
    .password-container {
        position: relative;
        display: inline-block;
    }

    .password-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('https://via.placeholder.com/20'); /* Replace with your image URL */
        opacity: 0.1; /* Adjust opacity as desired */
        z-index: 1;
    }

    #passwordField {
        padding-right: 30px; /* Ensure space for the icon */
        z-index: 2;
    }

    #togglePassword {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        right: 5px; /* Adjust distance from the right edge */
        z-index: 3;
        background: transparent;
        border: none;
        outline: none; /* Remove default focus outline */
        box-shadow: none; /* Remove default focus box shadow */
    }
</style>

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Student Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Student Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StudentName)</dd>
                <dt class="col-sm-3">Password</dt>
                <dd class="col-sm-9">
                    <div class="password-container">
                        <input type="password" id="passwordField" value="@Model.Password" class="form-control" readonly />
                        <div class="password-background"></div>
                        <button class="btn btn-outline-secondary rounded-circle" type="button" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </dd>
                <dt class="col-sm-3">Is Active</dt>
                <dd class="col-sm-9">@((Model.IsActive) ? "Yes" : "No")</dd>
                <dt class="col-sm-3">Grade</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.GradeId)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script>
        document.getElementById('togglePassword').addEventListener('click', function () {
            var passwordField = document.getElementById('passwordField');
            if (passwordField.getAttribute('type') === 'password') {
                passwordField.setAttribute('type', 'text');
            } else {
                passwordField.setAttribute('type', 'password');
            }
        });
    </script>
}
