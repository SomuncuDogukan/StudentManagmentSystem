@model StudentModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row">
        <div class="col-lg-6">
            <form asp-action="Create" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3 row">
                    <label asp-for="StudentName" class="col-sm-3 col-form-label fw-bold">Student Name</label>
                    <div class="col-sm-9">
                        <input asp-for="StudentName" class="form-control" required />
                        <span asp-validation-for="StudentName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Password" class="col-sm-3 col-form-label fw-bold">Password</label>
                    <div class="col-sm-9">
                        <input asp-for="Password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="IsActive" class="col-sm-3 col-form-label fw-bold">Is Active</label>
                    <div class="col-sm-9 d-flex align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">Active</label>
                        </div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="GradeId" class="col-sm-3 col-form-label fw-bold">Grade</label>
                    <div class="col-sm-9">
                        <select asp-for="GradeId" class="form-select" asp-items="ViewBag.Grades" required>
                            <option value="">-- Select --</option>
                        </select>
                        <span asp-validation-for="GradeId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="offset-sm-3 col-sm-9">
                        <button type="submit" class="btn btn-primary me-2">Save</button>
                        <button type="reset" class="btn btn-secondary me-2">Reset</button>
                        <a asp-action="Index" class="btn btn-link text-decoration-none">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
