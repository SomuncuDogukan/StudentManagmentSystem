﻿
@model CourseModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
	ViewData["Title"] = "Create";
}

<h1>@ViewData["Title"]</h1>

<h4>Genre</h4>
<hr />
<div class="row">
	<div class="col-12">
		<form asp-action="Create">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="row mb-3">
				<label asp-for="Course_Title" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Course_Title" class="form-control" />
					<span asp-validation-for="Course_Title" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="Course_Content" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Course_Content" class="form-control" />
					<span asp-validation-for="Course_Content" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="StudentIdsInput" class="col-2 col-form-label"></label>
				<div class="col-5">

					@*
					since the application user may select many users,
					we created a list box by using multiple HTML attribute
					*@
					<select multiple asp-for="StudentIdsInput" class="form-select select2" asp-items="ViewBag.Student"></select>

					<span asp-validation-for="StudentIdsInput" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
					<button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>