@model CourseModel
@*Generated from Custom Template.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Course Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Course Title</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Course_Title)</dd>
                <dt class="col-sm-2">Course Content</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Course_Content)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
